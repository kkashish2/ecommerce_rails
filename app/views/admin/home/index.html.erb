<body id="page-top">
  <div id="wrapper">
   <div id="content-wrapper" class="d-flex flex-column">
      <div id="content">

        <!-- Topbar -->
        <%= render 'layouts/shared/admin/topbar' %>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid mt-4">

          <!-- Admin Dashboard Header -->
          <div class="row mb-4">
            <div class="col-12 text-center">
              <h1>Admin Dashboard</h1>
              <p class="lead">Overview of all records</p>

              <a href="http://127.0.0.1:3000/"><i class="bi bi-bag-check">Home</i></a>

              <a href="http://127.0.0.1:3000/products"><i class="bi bi-bag-heart">Products</i></a>

            </div>
          </div>




          <!-- Total Users Section -->
          <div class="row mb-4">
            <div class="col-md-6">
              <div class="card shadow">
                <div class="card-body">
                  <h3 class="card-title">Total Users</h3>
                  <p><strong><%= @user_count %></strong></p>
                </div>
              </div>
            </div>
          </div>

          <!-- User List Section -->
          <div class="row">
            <div class="col-12">
              <h2 class="text-center mb-4">User List</h2>
              <div class="card shadow">
                <div class="card-body">
                  <% if @users.any? %>
                    <table class="table table-striped table-bordered">
                      <thead>
                        <tr>
                          <th>Email</th>
                          <th>Role</th>
                          <th>Created At</th>
                          <th>Updated At</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% @users.each do |user| %>
                          <tr>
                            <td><%= user.email %></td>
                            <td><%= user.role %></td>
                            <td><%= user.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
                            <td><%= user.updated_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                  <% else %>
                    <p>No users found.</p>
                  <% end %>
                </div>
              </div>
            </div>
          </div>

          <!-- Records Section -->
          <div class="row">
            <div class="col-12">
              <h2 class="text-center mb-4">Records</h2>

              <% @models.each do |model_name, records| %>
                <div class="card shadow mb-4">
                  <div class="card-body">
                    <h3 class="card-title"><%= model_name %> Records</h3>
                    <% if records.any? %>
                      <table class="table table-striped table-bordered">
                        <thead>
                          <tr>
                            <% records.first.attributes.keys.each do |key| %>
                              <th><%= key.capitalize %></th>
                            <% end %>
                          </tr>
                        </thead>
                        <tbody>
                          <% records.each do |record| %>
                            <tr>
                              <% record.attributes.each_value do |value| %>
                                <td><%= value %></td>
                              <% end %>
                            </tr>
                          <% end %>
                        </tbody>
                      </table>
                    <% else %>
                      <p>No records to display.</p>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>

        </div>
        <!-- End of Page Content -->

      </div>
      <!-- End of Main Content -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Logout Modal-->
  <%= render 'layouts/shared/admin/layoutmodal' %>
  <!-- End Logout Modal-->

</body>
