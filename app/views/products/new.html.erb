<style>
  /* Set the background color of the page to red */
  body {
    background-color: #ffd8ec;
  }

  /* Styling for the container */
  .container {
    max-width: 900px;
    margin-top: 50px;
  }

  /* Heading Styling */
  .main-heading {
    text-align: center;
    color: #fff;
    font-size: 2.5rem;
    margin-bottom: 30px;
    font-weight: bold;
  }
</style>

<div class="container mt-5">

  <!-- Main Heading -->
  <div class="main-heading">
    <h1>Create New Product</h1>
    <p class="text-white">Please fill in the details below to add a new product to our catalog.</p>
  </div>

  <!-- Outer Row -->
  <div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">

      <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
          <!-- Nested Row within Card Body -->
          <div class="row">
            <!-- Form for New Product -->
            <%= form_for @product do |f| %>

              <!-- Left Column (Image placeholder for large screens) -->
              <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>

              <!-- Right Column (Form Inputs) -->
              <div class="col-lg-6">
                <div class="p-5">

                  <!-- Form Heading -->
                  <div class="text-center mb-4">
                    <h1 class="h4 text-gray-900">Create New Product</h1>
                    <p class="text-muted">Fill in the information to create a new product.</p>
                  </div>

                  <!-- Product Name -->
                  <div class="form-group">
                    <%= f.label :name, class: "form-control-label" %>
                    <%= f.text_field :name, class: "form-control form-control-user", placeholder: "Enter name of Product...", autofocus: true %>
                  </div>

                  <!-- Product Quantity -->
                  <div class="form-group">
                    <%= f.label :quantity, class: "form-control-label" %>
                    <%= f.number_field :quantity, class: "form-control form-control-user", placeholder: "Enter Quantity" %>
                  </div>

                  <!-- Product Price -->
                  <div class="form-group">
                    <%= f.label :price, class: "form-control-label" %>
                    <%= f.number_field :price, class: "form-control form-control-user", placeholder: "Enter Price" %>
                  </div>

                  <!-- Product Description -->
                  <div class="form-group">
                    <%= f.label :description, class: "form-control-label" %>
                    <%= f.text_field :description, class: "form-control form-control-user", placeholder: "Enter Description" %>
                  </div>

                  <!-- Product Category -->
                  <div class="form-group">
                    <%= f.label :category, class: "form-control-label" %>
                    <%= f.select :category, Product.categories.keys.map { |cat| [cat.capitalize, cat] }, {}, class: "form-control" %>
                  </div>

                  <hr>

                  <!-- Product Image -->
                  <div class="form-group">
                    <%= f.label :image, class: "form-control-label" %>
                    <%= f.file_field :image, class: "form-control" %>
                  </div>

                  <hr>

                  <!-- Submit Button -->
                  <%= f.submit "Create Product", class: "btn btn-primary btn-user btn-block" %>

                </div>
              </div>

            <% end %>
          </div>
        </div>
      </div>

    </div>

  </div>

</div>
